<div>
user: 	<%= @user.name %></br>
created: <%= time_ago_in_words(@user.created_at)%> ago</br>

<%= form_for @user do |f| %>
<%= f.label :email %>:
<%= f.text_field :email %></br>
<%= f.label :about %>:</br>
<%= f.text_area :about, :cols => "70", :rows => "10" %></br>
<%= f.submit "Update" %></br></br>
<% end %>

<%= link_to "submissions", user_posts_path(@user) %></br>
<%= link_to "comments", user_comments_path(@user) %>

</div>